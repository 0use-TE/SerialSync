@using BlazorAnimate
@if(LogIsRight)
{
    <Animate Animation="Animations.FadeLeft" DurationMs="600">
        <RegionOfLog></RegionOfLog>
    </Animate>
}
else
{
    <SplitContainer TSize="int" Orientation="SplitterOrientation.Horizontal" Style="width:100%; height:100%;"  @bind-FirstPaneSize=Home.Layout.PortAndUser FirstPaneMinSize="20" UnitOfPaneSize="UnitOfPaneSize.Percent">
        <FirstPane>
            <Animate Animation="Animations.Fade" DurationMs="600">
                <DynamicComponent Type="@(Home.Layout.UserSettingIsTop ? typeof(UserSetting) : typeof(SerialPortSetting))" />
            </Animate>
        </FirstPane>
        <SecondPane>
            <Animate Animation="Animations.Fade" DurationMs="600">
                <DynamicComponent Type="@(!Home.Layout.UserSettingIsTop ? typeof(UserSetting) : typeof(SerialPortSetting))" />
            </Animate>
        </SecondPane>
    </SplitContainer>
}
@code
{
    [CascadingParameter]
    private Home Home { get; set; } = null!;
    [Parameter]
    public bool LogIsRight{ get; set; }
}
